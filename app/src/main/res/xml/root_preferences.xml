<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/language">

        <ListPreference
            android:defaultValue="false"
            android:entries="@array/languages"
            android:entryValues="@array/languages"
            android:key="lpLang"
            android:title="@string/languageChoice" />

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/theme">

        <SwitchPreference
            android:defaultValue="false"
            android:id="@+id/dark_theme_switch"
            android:key="dark_theme_switch"
            android:title="@string/darkTheme"/>


    </PreferenceCategory>


</PreferenceScreen>